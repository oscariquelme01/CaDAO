{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "artifacts/contracts"
    ],
    "exclude": [
        "test",
        "node_modules",
        "scripts",
        "dist",
        "webpack",
        "artifacts",
        "typechain-types",
        "hardhat.config.ts"
    ]
}
